<div
  class="w-full max-w-sm bg-white border-t-4 <%= bg_color %> <%= border_color %> rounded-lg shadow-lg pointer-events-auto hidden"
  data-controller="notification">
  <div class="overflow-hidden rounded-lg shadow-xs">
    <div class="p-4">
      <div class="flex items-start">
        <div class="flex-shrink-0">
          <%= icon %>
        </div>

        <div class="ml-3 w-0 flex flex-col flex-1 pt-0.5">
          <p class="text-sm font-medium text-gray-900 leading-5">
            <%= @data[:title] %>
          </p>

          <% if @data[:body].present? %>
            <p class="mt-1 text-sm text-gray-500 leading-5">
            <%= @data[:body] %>
            </p>
          <% end %>

          <div class="self-end mt-2">
            <button class="ml-6 text-sm font-medium leading-5 <%= icon_color %> focus:outline-none underline transition ease-in-out duration-150" data-action="notification#close">
              <%= t('.dismiss') %>
            </button>
          </div>
        </div>
      </div>
    </div>
  </div>
</div> 
