<div class="flex justify-center min-h-screen px-4 py-12 md:items-center bg-gray-50 sm:px-6 lg:px-8">
  <div class="w-full max-w-xl px-8 py-4 space-y-8">
    <div>
      <h2 class="mt-3 text-3xl font-extrabold text-center text-gray-900">
        Create an Account
      </h2>
    </div>

    <div class="px-6 pt-2 pb-8 bg-white rounded-lg shadow-lg">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'space-y-8' }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <div class="space-y-4">
          <div>
            <%= f.label :name, class: 'text-sm text-gray-700' %><br />
            <%= f.text_field :name, class: 'mt-1 rounded-none relative block w-full px-4 py-3 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm', placeholder: 'username (will be shown publicly)'  %>
          </div>

          <div>
            <%= f.label :email, class: 'text-sm text-gray-700' %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'mt-1 rounded-none relative block w-full px-4 py-3 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm', placeholder: 'Email Address'  %>
          </div>

          <div>
            <%= f.label :password, class: 'text-sm text-gray-700' %>
            <% if @minimum_password_length %>
              <em class="text-xs">(<%= @minimum_password_length %> characters minimum)</em>
            <% end %>
            <%= f.password_field :password, autocomplete: "new-password", class: 'mt-1 rounded-none relative block w-full px-4 py-3 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm', placeholder: 'Password' %>
          </div>

          <div>
            <%= f.label :password_confirmation, class: 'text-sm text-gray-700' %><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'mt-1 rounded-none relative block w-full px-4 py-3 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm', placeholder: 'Comfirm Password' %>
          </div>
        </div>

        <div class="actions">
          <%= f.submit "Sign up", class: 'w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500' %>
        </div>
      <% end %>

      <div class="flex items-center mt-4">
        <div>
          <span class="block text-sm text-gray-700">Or</span>
        </div>

        <div class="flex justify-center ml-4 actions item-center">
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>

