<div class="flex justify-center min-h-screen px-4 py-12 md:items-center bg-gray-50 sm:px-6 lg:px-8">
  <div class="w-full max-w-xl px-8 py-4 space-y-8">
    <div>
      <h2 class="mt-3 text-3xl font-extrabold text-center text-gray-900">
        Edit <%= resource_name.to_s.humanize %>
      </h2>
    </div>

    <div class="px-6 pt-2 pb-8 bg-white rounded-lg shadow-lg">

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <div class="space-y-4">
          <%= render "devise/shared/error_messages", resource: resource %>

          <div class="field">
            <%= f.label :email, class: 'text-sm text-gray-700' %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'mt-1 rounded-none relative block w-full px-4 py-3 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm' %>
          </div>

          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
          <% end %>

          <div class="field">
            <%= f.label :password, class: 'text-sm text-gray-700' %> <i class="ml-3 text-xs text-gray-600">(leave blank if you don't want to change it)</i><br />
            <%= f.password_field :password, autocomplete: "new-password", class: 'mt-1 rounded-none relative block w-full px-4 py-3 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm' %>
            <% if @minimum_password_length %>
              <br />
              <em class="text-xs text-gray-600"><%= @minimum_password_length %> characters minimum</em>
            <% end %>
          </div>

          <div class="field">
            <%= f.label :password_confirmation, class: 'text-sm text-gray-700' %><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'mt-1 rounded-none relative block w-full px-4 py-3 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm' %>
          </div>

          <div class="field">
            <%= f.label :current_password, class: 'text-sm text-gray-700' %> <i class="ml-3 text-xs text-gray-600">(we need your current password to confirm your changes)</i><br />
            <%= f.password_field :current_password, autocomplete: "current-password", class: 'mt-1 rounded-none relative block w-full px-4 py-3 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm' %>
          </div>

          <div class="actions">
            <%= f.submit "Update", class: 'w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500' %>
          </div>
        </div>
      <% end %>

      <h3 class="mt-4 mb-2 text-lg font-bold text-center text-gray-800">Cancel my account</h3>

      <div class="flex items-center">
        <span class="inline-block text-sm text-gray-700">
          Unhappy?
        </span>
        <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: 'ml-3 text-sm font-medium text-red-600 rounded-md hover:text-red-700 cursor-pointer bg-transparent hover:underline' %></div>

      <div class="flex items-center justify-between mt-4">
        <div>
          <%= link_to "Back", :back, class: "inline-block font-medium text-indigo-600 hover:text-indigo-500" %>
        </div>

        <div class="flex justify-center ml-4 actions item-center">
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>

