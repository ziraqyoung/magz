<div class="flex flex-col p-4 bg-white shadow-md col-span-full space-y-6 divide-y-2 md:col-span-10 md:col-start-2 rounded-md">
  <div class="flex flex-col justify-between space-y-2 md:flex-row">
    <div class="flex flex-col space-y-2">
      <h2 class="text-xl font-medium text-gray-800 sm:text-2xl">
        <%= @post.title %>
      </h2>

      <small class="text-xs font-semibold text-gray-500">
        Posted by 
        <span class="inline-block px-2 py-1 ml-1 text-gray-600 bg-gray-200 rounded-full"><%= @post.user.name %></span>
      </small>
    </div>

    <div>
      <span class="text-xs font-semibold text-gray-500 sm:text-sm">
        <%= @post.created_at %>
      </span>
    </div>
  </div>

  <div class="pt-4">
    <p class="text-lg text-gray-800">
    <%= @post.content %>
    </p>
  </div>
</div>
