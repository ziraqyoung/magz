<div class="h-screen">
  <div class="flex flex-col space-y-6 divide-y-2">
    <div class="flex flex-col justify-between space-y-2 md:flex-row">
      <div class="flex flex-col space-y-2">
        <h2 class="text-3xl font-bold text-gray-800">
          <%= @post.title %>
        </h2>
        <small class="text-xs font-semibold text-gray-500">
          Posted by 
          <span class="inline-block px-2 py-1 ml-1 text-gray-600 bg-gray-200 rounded-full"><%= @post.user.name %></span>
        </small>
      </div>

      <div>
        <span class="text-xs font-semibold text-gray-500">
          <%= @post.created_at %>
        </span>
      </div>
    </div>

    <div class="pt-4">
      <p class="text-2xl font-medium text-gray-800">
      <%= @post.content %>
      </p>
    </div>
  </div>
</div>
