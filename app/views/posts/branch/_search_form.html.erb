<div>
  <%= form_tag send("#{branch}_posts_path"), method: :get, class: 'relative' do %>
    <div class="absolute flex items-center justify-center w-10 h-full text-gray-500 ">
      <svg class="w-6 h-6 " xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
      </svg>
    </div>

    <%= text_field_tag :search, params[:search], placeholder: search_placeholder, class: 'bg-gray-100 focus:ring-2 font-semibold pl-12 placeholder-gray-500 py-2 rounded-2xl shadow-lg text-gray-600 w-full border-indigo-300'  %>
    <%= render category_field_partial_path %>
  <% end %>
</div>
