<section class="flex flex-col col-span-12 sm:col-span-6 lg:col-span-4">
  <div class="flex flex-col justify-between flex-1 p-4 overflow-hidden bg-white border shadow-lg space-y-4 rounded-md">
    <h3 class="text-lg font-semibold text-shadow">
      <%= truncate(post.title, length: 60) %>
    </h3>
    <div class="overflow-x-hidden text-gray-600 text-shadow">
    <%= post.content %>
    </div>

    <div class="text-center single_post_card">
      <%= link_to "I'm interested", post_path(post.id), class: 'inline-block px-4 py-2 text-sm font-semibold text-white bg-blue-700 hover:bg-opacity-80 transition-colors duration-150 rounded-lg' %>
    </div>
  </div>
</section>
