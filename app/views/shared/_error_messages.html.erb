<% if object.errors.any?  %>
  <div id="error_explanation" class="px-4 py-4 bg-rose-100 rounded-md divide-y-2 divide-rose-300 space-y-2">
    <h3 class="text-sm font-semibold text-rose-500">This form contains <span class="inline-block px-3 py-2 text-white rounded-full bg-rose-500"><%= pluralize(object.errors.count, 'error') %></span></h3>
    <ul class="pt-1.5">
      <% object.errors.full_messages.each do |msg| %>
        <li class="font-mono text-rose-500"><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>
